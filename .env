# ===========================
# üåê SERVER CONFIGURATION
# ===========================

# Host and Port for aiohttp server
HOST=0.0.0.0
PORT=8080

# Enable debug mode (True/False)
DEBUG=

# Number of items to show per page
RESULTS_PER_PAGE=20

# If True, block downloads (used for restricted mode)
BLOCK_DOWNLOADS=False


# ===========================
# ü§ñ TELEGRAM CONFIGURATION
# ===========================

# Your Telegram API credentials from https://my.telegram.org/apps
API_ID=xxxxxx
API_HASH=xxxxxxxx

# Telethon session string (to authenticate your client)
SESSION_STRING=xxxxxxxxxxxxxxxxxxxx

# JSON string for index settings value (must stay on one line, valid JSON)
INDEX_SETTINGS={"index_all": false, "index_private": false, "index_group": false, "index_channel": true, "exclude_chats": [], "include_chats": [-100xxxxx, -100xxxxxxx]}


# ===========================
# üîê AUTHENTICATION
# ===========================

# Optional username & password for admin or restricted access
TGINDEX_USERNAME=
TGINDEX_PASSWORD=

# Session cookie lifetime (in minutes)
SESSION_COOKIE_LIFETIME=60

# 32-character random secret key (for cookies/encryption)
SECRET_KEY=


# ===========================
# üß© OTHER CONFIGURATION
# ===========================

# Short URL length for generated links (alias id)
SHORT_URL_LEN=3
